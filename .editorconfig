# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
# Set default charset
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_size = 2
indent_style = space

[*.scss]
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.sh]
indent_size = 2
indent_style = space

[.eslintignore,.eslintrc,.gitignore]
indent_size = 2
indent_style = space
